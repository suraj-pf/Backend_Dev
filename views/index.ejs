<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body >
  <div class="main w-full min-h-screen text-white bg-zinc-900 p-10">

    <div class="form">
      <form action="/create" method="POST">
        <input class="block w-full rounded-lg px-5 py-2 bg-zinc-800" type="text" placeholder="title goes here" name="title">
        <textarea class="block w-full rounded-lg mt-2 px-5 py-2 resize-none bg-zinc-800" placeholder="Write your task details" name="description"></textarea>
        <input class="mt-2 bg-blue-600 rounded-lg px-5 py-2" type="submit" value="Create Task">
      </form>
    </div>

    <!-- Task creation -->
     
        
    <div class="tasks flex gap-3 flex-wrap p-10">
        <% if(files.length > 0){ %>
          <% files.forEach((value) => { %>
            <div class="task  w-72 px-3 py-4 bg-zinc-800 rounded-lg">
              <h1 class="text-white text-3xl tracking-tighter "> <%= value %></h1>
              <div class="flex w-full justify-between items-center">
                  <a href="/files/<%= value %>" class="text-blue-600 inline-block mt-3 na" > read more </a>
                  <a href="/edit/<%= value %>" class="text-yellow-300 inline-block mt-3 na" > edit filenamex </a>
              </div>
            </div>
          <% }) %>
        <% } else {%>
          <h3 class="text-zinc-600"> No tasks available</h3>
        <% } %>
</body>
</html>
