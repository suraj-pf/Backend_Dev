<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-950 text-white">

    <div class="max-w-6xl mx-auto py-12 px-6">

        <!-- Header -->
        <div class="flex items-center justify-between mb-10">
            <h1 class="text-4xl font-bold tracking-tight">All Users</h1>
            <a href="/" class="text-blue-400 underline hover:text-blue-300">Back to Home</a>
        </div>

        <!-- Users Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-7">

            <% user.forEach(function(user) { %>
                <div class="bg-zinc-900 rounded-xl shadow-lg overflow-hidden border border-zinc-800 hover:border-zinc-700 transition">

                    <!-- User Image -->
                    <div class="w-full bg-zinc-700">
                        <img class="w-full object-cover" src="<%= user.image %>" alt="">
                    </div>


                    <!-- User Info -->
                    <div class="p-5">
                        <h3 class="text-xl font-semibold tracking-tight"><%= user.name %></h3>
                        <p class="text-zinc-400 text-sm"><%= user.email %></p>

                        <!-- Actions -->
                        <div class="flex items-center justify-between mt-6">
                            <a href="/edit/<%= user._id %>" 
                               class="text-blue-400 text-sm hover:text-blue-300">
                                Edit
                            </a>
                            <a href="/delete/<%= user._id %>" 
                               class="text-red-400 text-sm hover:text-red-300">
                                Delete
                            </a>
                        </div>
                    </div>

                </div>
            <% }) %>


        </div>

    </div>

</body>
</html>
